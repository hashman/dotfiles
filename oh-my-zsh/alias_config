deploy() {
    if [ $# -eq 3 ]
    then
        TAG_NAME=$3
    else
        NOW=$(date +"%Y%m%d_%k%M")
        TAG_NAME="tested_$NOW"
    fi
    TARGET_COMMIT=$1
    TARGET_BRANCH=$2
    git tag -a "$TAG_NAME" -m "$TAG_NAME" $TARGET_COMMIT
    git checkout $TARGET_BRANCH && git pull origin $TARGET_BRANCH
    git merge $TAG_NAME
}

